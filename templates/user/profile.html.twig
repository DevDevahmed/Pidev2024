{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block stylesheets %}
    {# Include additional stylesheets if needed for the profile page #}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Profile Section Start -->
    <section class="profile-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="profile">
                        <h2 class="profile-title">User Profile</h2>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.cin) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.tel, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.tel) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.password) }}
                            </div>
                            <!-- Add more profile fields here if needed -->

                            <button type="submit" class="btn btn-primary">Modifier</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Profile Section End -->
{% endblock %}

{% block javascripts %}
    {# Include additional JavaScript files if needed for the profile page #}
    {{ parent() }}
{% endblock %}
